<%= semantic_form_for [:admin, @user] do |f| %>

  <%= f.inputs "Datos bÃ¡sicos" do %>
    <%= f.input :user_name %>
    <%= f.input :email %>
    <% if @user.new_record? %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    <% end %>
  <% end %>

  <%= f.inputs :name => 'Invitado #%i', :for => :invitees do |inv| %>
    <%= inv.input :name %>
