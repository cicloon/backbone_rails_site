  .container
    .row
      %nav.span4
        = link_to root_path do
          %h1 Alex y Cristy
        %ul.clearfix

          %li{class: header_link_class('home') }
            = link_to root_path do
              .layout-home-icon
              %span.visible-desktop Home
          

          %li.coming-soon{'data-toggle' => 'tooltip', 'data-placement' => 'bottom', title: 'Proximamente' }
